<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="16dp">

    <com.wyz.emlibrary.custom.RoundedImageView
        android:id="@+id/iv_icon"
        android:layout_width="match_parent"
        android:layout_height="152dp"
        app:riCornerRadius="16dp"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:layout_marginTop="8dp"
        android:textColor="@color/text_main_color"
        android:textSize="14sp"
        android:fontFamily="@font/gotham_m" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/text_main_color_80"
        android:textSize="12sp"
        android:fontFamily="@font/gotham_r"
        android:layout_marginTop="6dp"
        android:singleLine="true"/>
    
    <View
        android:id="@+id/line_view"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/text_main_color_10"
        android:layout_marginTop="10dp"/>
</LinearLayout>