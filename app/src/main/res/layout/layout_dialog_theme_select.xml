<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:layout_gravity="center_horizontal">

            <View
                android:id="@+id/top_line"
                android:layout_width="88dp"
                android:layout_height="4dp"
                app:rcCornerRadius="2dp"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:textSize="18sp"
            android:text="@string/text_theme"
            android:fontFamily="@font/gotham_m"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <GridLayout
            android:id="@+id/grid_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="3"
            android:rowCount="1"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="24dp">

            <com.habit.app.ui.custom.EngineSelectItem
                android:id="@+id/item_system"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:egsIcon="@drawable/iv_s_mode_system"
                app:egsTitle="@string/text_system"
                app:egsSelect="true"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_marginHorizontal="8dp" />

            <com.habit.app.ui.custom.EngineSelectItem
                android:id="@+id/item_light"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:egsIcon="@drawable/iv_s_mode_light"
                app:egsTitle="@string/text_light"
                app:egsSelect="false"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_marginHorizontal="8dp" />

            <com.habit.app.ui.custom.EngineSelectItem
                android:id="@+id/item_dark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                app:egsIcon="@drawable/iv_s_mode_night"
                app:egsTitle="@string/text_dark"
                app:egsSelect="false"
                android:layout_row="0"
                android:layout_column="2"
                android:layout_marginHorizontal="8dp" />
        </GridLayout>
        
        <TextView
            android:id="@+id/btn_confirm"
            android:layout_width="match_parent"
            android:layout_height="46dp"
            android:text="@string/text_ok"
            android:textSize="16sp"
            android:gravity="center"
            android:textColor="@color/white"
            android:fontFamily="@font/gotham_m"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="24dp"/>
    </LinearLayout>
</FrameLayout>