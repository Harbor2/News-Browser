<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- navi -->
    <FrameLayout
        android:id="@+id/container_navi"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:id="@+id/container_navi_normal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_navi_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_navi_back"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"/>

            <LinearLayout
                android:id="@+id/container_top_tab"
                android:layout_width="220dp"
                android:layout_height="44dp"
                android:gravity="center_vertical"
                android:layout_gravity="center"
                android:paddingHorizontal="6dp">

                <com.habit.app.ui.custom.TagTabItem
                    android:id="@+id/tab_bookmark"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    app:ttiTitle="@string/text_bookmark"
                    app:ttiSelect="true"
                    app:ttiCount="0"/>

                <View
                    android:layout_width="4dp"
                    android:layout_height="1dp"/>

                <com.habit.app.ui.custom.TagTabItem
                    android:id="@+id/tab_history"
                    android:layout_width="0dp"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    app:ttiTitle="@string/text_history"
                    app:ttiSelect="false"
                    app:ttiCount="0"/>
            </LinearLayout>

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|end"
                android:layout_marginEnd="14dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_navi_create_folder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:src="@drawable/iv_bh_navi_create_folder"/>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_navi_clear_history"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="6dp"
                    android:visibility="gone"
                    android:src="@drawable/iv_bh_navi_clean_history"/>
            </FrameLayout>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_navi_close"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_navi_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_navi_close"
                android:padding="6dp"
                android:layout_gravity="center_vertical"
                android:layout_marginStart="14dp"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_navi_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_checkbox_unselect"
                android:layout_marginEnd="20sp"
                android:layout_gravity="center_vertical|end"/>
        </FrameLayout>
    </FrameLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/container_navi"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- loading -->
    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view"
            android:layout_width="126dp"
            android:layout_height="126dp"
            app:cardBackgroundColor="@color/view_bg_color"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>