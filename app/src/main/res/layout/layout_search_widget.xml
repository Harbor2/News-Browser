<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/container_search"
        android:layout_width="0dp"
        android:layout_height="42dp"
        android:layout_weight="1"
        android:background="@drawable/widget_search_container_bg"
        android:layout_gravity="center_vertical|start"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_widget_search_icon1"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="12dp"/>

        <TextView
            android:id="@+id/tv_search_str"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_search_point"
            android:textSize="14sp"
            android:textColor="@color/text_main_color_50"
            android:fontFamily="@font/gotham_r"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="48dp"/>

        <ImageView
            android:id="@+id/iv_search_icon2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/iv_widget_search_icon2"
            android:layout_gravity="center_vertical|end"
            android:layout_marginEnd="12dp"/>
    </FrameLayout>

    <ImageView
        android:id="@+id/iv_news"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:src="@drawable/iv_widget_news"/>

    <ImageView
        android:id="@+id/iv_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:layout_marginEnd="16dp"
        android:src="@drawable/iv_widget_scan"/>
</LinearLayout>