<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:minWidth="200dp"
    android:layout_height="wrap_content"
    android:background="@color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="18dp">

        <View
            android:layout_width="200dp"
            android:layout_height="0.1dp"
            android:background="@color/transparent"/>

        <TextView
            android:id="@+id/item_delete"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_delete"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_open_new_tab"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_open_in_new_tab"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_remove"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_remove"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_edit"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_edit"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_add_navigation"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_add_navigation"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_add_screen"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_add_to_home_screen"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/item_select"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:text="@string/text_select"
            android:textSize="14sp"
            android:textColor="@color/text_main_color"
            android:gravity="center_vertical"
            android:layout_marginVertical="6dp"
            android:paddingHorizontal="20dp"
            android:fontFamily="@font/gotham_m"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>