<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/transparent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/container_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="12dp"
            android:layout_gravity="center_horizontal">

            <View
                android:id="@+id/top_line"
                android:layout_width="88dp"
                android:layout_height="4dp"
                app:rcCornerRadius="2dp"
                android:layout_gravity="center_horizontal"/>
        </FrameLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/text_main_color"
            android:textSize="18sp"
            android:text="@string/text_add_navigation"
            android:fontFamily="@font/gotham_m"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="40dp">

            <com.wyz.emlibrary.custom.RoundedImageView
                android:id="@+id/iv_icon"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:riCornerRadius="9dp"
                android:src="@drawable/iv_web_icon_default"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <EditText
                android:id="@+id/edit_input"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="12dp"
                android:background="@null"
                android:fontFamily="@font/gotham_r"
                android:textColor="@color/text_main_color"
                android:textSize="14sp"
                android:hint="@string/enter_url"
                android:singleLine="true"
                android:layout_marginStart="45dp"
                android:textColorHint="@color/text_main_color_30"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <View
                android:id="@+id/line_view"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/text_main_color_10"
                android:layout_marginStart="45dp"
                android:layout_marginBottom="2dp"
                app:layout_constraintBottom_toBottomOf="@id/iv_icon"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="24dp">

            <TextView
                android:id="@+id/btn_cancel"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="@string/text_cancel"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_m" />

            <View
                android:layout_width="12dp"
                android:layout_height="1dp"/>

            <TextView
                android:id="@+id/btn_save"
                android:layout_width="0dp"
                android:layout_height="46dp"
                android:layout_weight="1"
                android:text="@string/text_ok"
                android:textSize="16sp"
                android:gravity="center"
                android:textColor="@color/white"
                android:fontFamily="@font/gotham_m" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>