<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_main_color"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <FrameLayout
        android:id="@+id/container_navi"
        android:layout_width="match_parent"
        android:layout_height="58dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="center_vertical">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_navi_tab_add"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/iv_navi_tab_add"
                android:paddingStart="16dp" />

            <FrameLayout
                android:id="@+id/container_input"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="52dp">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_search_icon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_navi_search_icon"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_main_color"
                    android:textColorHint="@color/text_main_color_30"
                    android:textSize="14sp"
                    android:hint="@string/text_search_point"
                    android:background="@null"
                    android:fontFamily="@font/gotham_r"
                    android:layout_gravity="center_vertical"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_marginStart="44dp"
                    android:layout_marginEnd="20dp"/>
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_navi_page_refresh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/iv_navi_page_refresh"
                android:layout_marginEnd="16dp"
                android:layout_gravity="center_vertical|end"/>
        </FrameLayout>
    </FrameLayout>

    <com.google.android.material.progressindicator.LinearProgressIndicator
        android:id="@+id/top_progress"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:progress="50"
        app:indicatorColor="@color/btn_color"
        app:trackColor="@color/transparent"
        app:trackCornerRadius="1dp"
        android:elevation="2dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/container_navi"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1.5dp"
        android:background="@color/black_5"
        app:layout_constraintTop_toBottomOf="@id/top_progress"
        android:elevation="2dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#ffeecc"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_progress"/>


    <!-- loading -->
    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="126dp"
            android:layout_height="126dp"
            app:cardBackgroundColor="@color/view_bg_color"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>