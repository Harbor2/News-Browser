<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/page_main_color">

    <!-- navi -->
    <FrameLayout
        android:id="@+id/container_navi"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        
        <LinearLayout
            android:id="@+id/container_top_tab"
            android:layout_width="220dp"
            android:layout_height="44dp"
            android:gravity="center_vertical"
            android:layout_gravity="center"
            android:paddingHorizontal="6dp">

            <com.habit.app.ui.custom.TagTabItem
                android:id="@+id/tab_public"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                app:ttiTitle="@string/text_public"
                app:ttiSelect="true"/>

            <View
                android:layout_width="4dp"
                android:layout_height="1dp"/>

            <com.habit.app.ui.custom.TagTabItem
                android:id="@+id/tab_privacy"
                android:layout_width="0dp"
                android:layout_height="32dp"
                android:layout_weight="1"
                app:ttiTitle="@string/text_privacy"
                app:ttiSelect="false"/>
        </LinearLayout>
    </FrameLayout>
    
</androidx.constraintlayout.widget.ConstraintLayout>