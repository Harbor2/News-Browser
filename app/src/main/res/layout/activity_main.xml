<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tabs_main_bottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/bottom_shadow"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        app:layout_constraintTop_toTopOf="@id/tabs_main_bottom"
        app:layout_constraintStart_toStartOf="@id/tabs_main_bottom"
        app:layout_constraintEnd_toEndOf="@id/tabs_main_bottom"/>

    <RadioGroup
        android:id="@+id/tabs_main_bottom"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/page_main_color"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <FrameLayout
            android:id="@+id/container_tab_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tab_home"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:checked="false"
                android:background="@drawable/selector_tab_background"
                android:layout_gravity="center"
                android:drawableTop="@drawable/tab_drawable_home"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/text_home"
                android:textSize="11sp"
                android:fontFamily="@font/gotham_r"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="@drawable/selector_main_tab_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_tab_news"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tab_news"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:checked="false"
                android:background="@drawable/selector_tab_background"
                android:layout_gravity="center"
                android:drawableTop="@drawable/tab_drawable_news"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/text_news"
                android:textSize="11sp"
                android:fontFamily="@font/gotham_r"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="@drawable/selector_main_tab_text" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_tab_tag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tab_tag"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:checked="false"
                android:background="@drawable/selector_tab_background"
                android:layout_gravity="center"
                android:drawableTop="@drawable/tab_drawable_tag"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/text_tag"
                android:textSize="11sp"
                android:fontFamily="@font/gotham_r"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="@drawable/selector_main_tab_text" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bottom_main_tab_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/gotham_m"
                android:layout_marginTop="13dp"
                android:layout_gravity="center_horizontal"
                android:textColor="@color/text_main_color_30"/>
        </FrameLayout>

        <FrameLayout
            android:id="@+id/container_tab_setting"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <RadioButton
                android:id="@+id/tab_setting"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:button="@null"
                android:clickable="false"
                android:checked="false"
                android:background="@drawable/selector_tab_background"
                android:layout_gravity="center"
                android:drawableTop="@drawable/tab_drawable_setting"
                android:drawablePadding="3dp"
                android:gravity="center"
                android:text="@string/text_setting"
                android:textSize="11sp"
                android:fontFamily="@font/gotham_r"
                android:paddingHorizontal="15dp"
                android:paddingTop="10dp"
                android:paddingBottom="5dp"
                android:textColor="@drawable/selector_main_tab_text" />
        </FrameLayout>
    </RadioGroup>


    <!-- 搜索也相关 -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/page_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/page_main_color"
        android:visibility="visible">

        <FrameLayout
            android:id="@+id/container_search_navi"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_gravity="center_vertical">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_navi_tab_add"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/iv_navi_tab_add"
                    android:paddingStart="16dp" />

                <LinearLayout
                    android:id="@+id/container_input"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginStart="52dp"
                    android:layout_marginEnd="52dp">

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_search_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/iv_navi_search_icon"
                        android:layout_gravity="center_vertical"
                        android:layout_marginStart="12dp"/>

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/edit_input"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/text_main_color"
                        android:textColorHint="@color/text_main_color_30"
                        android:textSize="14sp"
                        android:hint="@string/text_search_point"
                        android:background="@null"
                        android:fontFamily="@font/gotham_r"
                        android:layout_gravity="center_vertical"
                        android:inputType="text"
                        android:lines="1"
                        android:ellipsize="end"
                        android:scrollHorizontally="false"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:imeOptions="actionSearch" />

                    <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/iv_input_trace"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:visibility="gone"
                        android:src="@drawable/iv_search_trace"
                        android:layout_marginEnd="12dp"/>
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_navi_page_refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/iv_navi_page_refresh"
                    android:layout_marginEnd="16dp"
                    android:alpha="0.3"
                    android:layout_gravity="center_vertical|end"/>
            </FrameLayout>
        </FrameLayout>

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/top_progress"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:progress="0"
            app:indicatorColor="@color/btn_color"
            app:trackColor="@color/transparent"
            app:trackCornerRadius="1dp"
            android:elevation="2dp"
            android:visibility="invisible"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/container_search_navi"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:background="@color/black_5"
            app:layout_constraintTop_toBottomOf="@id/top_progress"
            android:elevation="2dp" />

        <FrameLayout
            android:id="@+id/container_web"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/top_progress"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_no_net"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/container_search_navi"
            app:layout_constraintBottom_toTopOf="@id/container_bottom">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_icon_no_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/t_night_iv_home_no_net"
                app:layout_constraintVertical_bias="0.6"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

            <TextView
                android:id="@+id/tv_no_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_no_net_available"
                android:textColor="@color/text_main_color_50"
                android:textSize="16sp"
                android:fontFamily="@font/gotham_r"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/iv_icon_no_net"
                app:layout_constraintStart_toStartOf="@id/iv_icon_no_net"
                app:layout_constraintEnd_toEndOf="@id/iv_icon_no_net"/>

            <TextView
                android:id="@+id/tv_check_net"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_check_the_network"
                android:textColor="@color/btn_color"
                android:textSize="14sp"
                android:fontFamily="@font/gotham_m"
                android:layout_marginBottom="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="@id/iv_icon_no_net"
                app:layout_constraintEnd_toEndOf="@id/iv_icon_no_net"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- 网页内容搜索 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_content_search"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            android:visibility="gone"
            android:background="@color/view_bg_color"
            app:layout_constraintBottom_toTopOf="@id/container_bottom">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/iv_navi_close"
                android:layout_marginStart="16dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
            
            <FrameLayout
                android:id="@+id/container_search_input"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginStart="52dp"
                android:layout_marginEnd="88dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/iv_search_icon2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="12dp"
                    android:src="@drawable/iv_bh_search_icon"/>

                <androidx.appcompat.widget.AppCompatEditText
                    android:id="@+id/edit_content_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="40dp"
                    android:layout_marginEnd="60dp"
                    android:singleLine="true"
                    android:background="@null"
                    android:fontFamily="@font/gotham_r"
                    android:textSize="12sp"
                    android:imeOptions="actionSearch"
                    android:textColor="@color/text_main_color"
                    android:hint="@string/toast_input_sth"
                    android:textColorHint="@color/text_main_color_50"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginEnd="12sp"
                    android:layout_gravity="center_vertical|end">
                    <TextView
                        android:id="@+id/tv_search_num1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/btn_color"
                        android:text="0"
                        android:textSize="12sp"
                        android:fontFamily="@font/gotham_r"/>

                    <TextView
                        android:id="@+id/tv_search_num2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/text_main_color_50"
                        android:text="/0"
                        android:textSize="12sp"
                        android:fontFamily="@font/gotham_r"/>
                </LinearLayout>
            </FrameLayout>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search_pre"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="52dp"
                android:alpha="0.3"
                android:src="@drawable/iv_search_pre"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_search_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                android:alpha="0.3"
                android:src="@drawable/iv_search_next"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <!-- 底部导航栏 -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/container_bottom"
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/iv_page_back"
                app:layout_constraintHorizontal_bias="0.1"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/iv_page_next"
                app:layout_constraintHorizontal_bias="0.3"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/iv_page_home"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_container_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/iv_page_container_num"
                app:layout_constraintHorizontal_bias="0.7"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_bottom_search_tab_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="@color/text_main_color"
                android:fontFamily="@font/gotham_m"
                app:layout_constraintTop_toTopOf="@id/btn_bottom_container_num"
                app:layout_constraintBottom_toBottomOf="@id/btn_bottom_container_num"
                app:layout_constraintStart_toStartOf="@id/btn_bottom_container_num"
                app:layout_constraintEnd_toEndOf="@id/btn_bottom_container_num"/>

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/btn_bottom_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:src="@drawable/iv_page_menu"
                app:layout_constraintHorizontal_bias="0.9"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- loading -->
    <FrameLayout
        android:id="@+id/loading_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="126dp"
            android:layout_height="126dp"
            app:cardBackgroundColor="@color/view_bg_color"
            app:cardCornerRadius="14dp"
            app:cardElevation="0dp"
            android:layout_gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">
            <ProgressBar
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="center" />
        </androidx.cardview.widget.CardView>
    </FrameLayout>
</androidx.constraintlayout.widget.ConstraintLayout>